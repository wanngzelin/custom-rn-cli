{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",                          /* Base directory to resolve non-absolute module names. */
     "paths": {
      "*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@assets/*": ["app/assets/*"],
      "@pages/*": ["app/pages/*"],
      "@router/*": ["app/route/*"],
      "@util/*": ["app/utils/*"],
      "@workspace/*": ["app/constants/*"],
      "@config/*": ["app/config/*"],
     },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}